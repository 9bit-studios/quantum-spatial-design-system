{
  "name": "@quantum-spatial/design-system",
  "version": "3.0.0",
  "description": "Unified quantum-spatial design system with Apple Intelligence integration",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=25.2.0",
    "npm": ">=11.6.2"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./react": {
      "types": "./dist/react/index.d.ts",
      "import": "./dist/react/index.js"
    },
    "./framer": {
      "types": "./dist/integrations/framer/index.d.ts",
      "import": "./dist/integrations/framer/index.js"
    },
    "./tokens": {
      "types": "./dist/tokens/index.d.ts",
      "import": "./dist/tokens/index.js"
    },
    "./tokens/core": {
      "types": "./dist/tokens/core/index.d.ts",
      "import": "./dist/tokens/core/index.js"
    },
    "./tokens/brand": {
      "types": "./dist/tokens/brand/index.d.ts",
      "import": "./dist/tokens/brand/index.js"
    },
    "./tokens/themes": {
      "types": "./dist/tokens/themes/index.d.ts",
      "import": "./dist/tokens/themes/index.js"
    },
    "./tokens/apple-hig": {
      "types": "./dist/tokens/brand/appleHIGTokens.d.ts",
      "import": "./dist/tokens/brand/appleHIGTokens.js"
    },
    "./tokens/m4": {
      "types": "./dist/tokens/brand/M4Tokens.d.ts",
      "import": "./dist/tokens/brand/M4Tokens.js"
    },
    "./tokens/foundation": {
      "types": "./dist/tokens/core/comprehensive-foundation-tokens.d.ts",
      "import": "./dist/tokens/core/comprehensive-foundation-tokens.js"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "import": "./dist/utils/index.js"
    }
  },
  "scripts": {
    "dev": "tsc --watch",
    "build": "tsc && npm run build:tokens",
    "build:tokens": "tsx scripts/build-tokens.ts",
    "validate": "tsc --noEmit && npm run validate:hig",
    "validate:hig": "tsx ../validation/enhanced-hig-qa-validator.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "figma:sync": "tsx integrations/figma/sync-from-figma.ts",
    "framer:auth": "tsx integrations/framer/oauth-setup.ts",
    "framer:deploy": "tsx integrations/framer/deploy-to-framer.ts",
    "notion:sync": "tsx integrations/notion/sync-design-tokens.ts",
    "vercel:deploy": "npm run build && vercel --prod"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "framer-motion": "^12.0.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwind-merge": "^2.0.0"
  },
  "devDependencies": {
    "@anthropic-ai/sdk": "^0.69.0",
    "@notionhq/client": "^5.4.0",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "tsx": "^4.7.0",
    "typescript": "^5.9.3",
    "vercel": "^48.10.2",
    "vite": "^6.0.0",
    "vitest": "^4.0.9"
  },
  "apple-hig": {
    "validation": {
      "touchTargets": {
        "min": 44,
        "enforced": true
      },
      "typography": {
        "minFontSize": 11,
        "enforced": true
      },
      "spacing": {
        "gridBase": 8,
        "enforced": true
      },
      "colors": {
        "contrastRatio": {
          "normal": 4.5,
          "large": 3
        }
      }
    }
  },
  "quantum-spatial": {
    "version": "3.0.0",
    "architecture": "unified-design-system",
    "tokens": {
      "sourceOfTruth": "./tokens",
      "platforms": ["web", "shopify", "nextjs", "react"],
      "validation": "strict",
      "appleHIGCompliance": true
    },
    "appleIntelligence": true,
    "m4Acceleration": true,
    "figmaIntegration": true,
    "framerIntegration": true,
    "notionIntegration": true
  }
}
